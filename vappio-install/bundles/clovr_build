#Retrieve grub and boot sector 
wget -P /mnt http://cb2.igs.umaryland.edu/grub-boot.tgz

apt-get -y install grub

#chroot
#update-initramfs
#create grub.cfg
#update-grub 
#grub-install

/etc/init.d/hudson start