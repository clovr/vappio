#!/bin/bash

case "$1" in
    start)
	twistd --pidfile=/opt/vappio-apps/www_data.pid --logfile=/opt/vappio-apps/www_data.log -y /opt/vappio-apps/www_data.tac
	touch /tmp/ergatisObserver.log
	chmod 666 /tmp/ergatisObserver.log
	;;
    stop)
	kill `cat /opt/vappio-apps/www_data.pid`
	;;
    reload)
	$0 stop
	$0 start
	;;
    *)
	echo "Unknown option"
	exit 1
	;;
esac

exit 0

